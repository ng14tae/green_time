<header class="bg-base-100 shadow-sm sticky top-0 z-50">
  <div class="navbar max-w-7xl mx-auto">
    <div class="navbar-start">
      <%= link_to root_path, class: "btn btn-ghost text-xl font-bold normal-case text-primary" do %>
        🌱 green_time
      <% end %>
    </div>

    <div class="navbar-end">
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-square hover:bg-primary hover:text-primary-content">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </div>
        <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow-lg border border-base-200">
          <li><%= link_to "マイページ", mypage_checkinout_records_path %></li>
          <li><a class="opacity-50 cursor-not-allowed">🌱ページ（準備中）</a></li>
          <li><a class="opacity-50 cursor-not-allowed">使い方（準備中）</a></li>
          <li><a class="opacity-50 cursor-not-allowed">利用規約（準備中）</a></li>
          <% if user_signed_in? %>
            <div class="user-info">
              <%= current_user.email %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </div>
            <% else %>
              <%= link_to "ログイン", new_user_session_path %>
              <%= link_to "新規登録", new_user_registration_path %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>