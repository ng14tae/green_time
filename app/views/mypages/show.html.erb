<% content_for :footer_bg_color, 'bg-warning' %>
<div class="hero min-h-screen bg-warning">
    <div class="container mx-auto px-4 sm:px-6">

        <!-- ヘッダー -->
        <div class="text-center text-error mb-6 sm:mb-8 pt-8 sm:pt-12">
        <h1 class="text-3xl sm:text-4xl font-bold mb-4">マイページ</h1>
        </div>

    <!-- 統計カード -->
    <%= render 'checkinout_records/components/stats_cards',
        today_record: @today_record,
        weekly_stats: @weekly_stats,
        monthly_stats: @monthly_stats %>

    <!-- 活動記録一覧 -->
    <%= render 'checkinout_records/components/records_list', recent_records: @recent_records %>

        <!-- ページネーション -->
        <div class="flex justify-center mt-2 sm:mt-3">
        <%= paginate @recent_records %>
        </div>

        <!-- フッター -->
        <div class="text-center mt-2 sm:mt-3 py-6 sm:py-8 mb-10">
        <% if @today_record&.checkout_time.nil? %>
            <p class="text-error text-sm">まだまだ頑張ろう〜！💪</p>
        <% else %>
            <p class="text-error text-sm">💪 お疲れさまでした！えらい！</p>
        <% end %>
        </div>
    </div>
</div>

<!-- JavaScript -->
<%= render 'checkinout_records/scripts/elapsed_time_script', today_record: @today_record if @today_record %>
<%= render 'checkinout_records/scripts/comment_toggle_script' %>
