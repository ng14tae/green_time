<div class="text-center py-12 space-y-6">
    <%= image_tag "kuma.png", alt: "ポチ", id: "pochi-image", class: "mx-auto w-48 h-48 object-contain" %>

    <h2 class="text-2xl font-bold text-primary">名前をつけてね</h2>

    <%= form_with model: @plant, url: plants_path, local: true do |f| %>
        <div class="form-control w-full max-w-xs mx-auto">
        <%= f.text_field :plant_name, placeholder: "名前を入力", class: "input input-bordered w-full" %>
        </div>
        <div class="mt-6">
        <%= f.submit "登録する", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>
