<div class="text-center py-12 space-y-6">
    <%= image_tag "kuma.png", alt: @plant.display_name, class: "mx-auto w-48 h-48 object-contain" %>

    <h2 class="text-2xl font-bold text-primary">
        <%= @plant.display_name %>
    </h2>

    <%= form_with model: @plant,
        url: (@plant.persisted? ? plant_path(@plant) : plants_path),
        method: (@plant.persisted? ? :patch : :post),
        local: true do |f| %>
        <div class="form-control w-full max-w-xs mx-auto">
        <%= f.text_field :plant_name,
            placeholder: "名前を入力（空白の場合：MIDORI）",
            class: "input input-bordered w-full" %>
        </div>
        <div class="mt-6">
        <%= f.submit "名前を設定", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>