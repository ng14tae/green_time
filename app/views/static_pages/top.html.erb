    <div class="hero-content text-center">
        <div class="max-w-md py-12 relative z-10">
            <!-- タイトル -->
            <h1 class="text-4xl font-bold mb-8 text-primary">Cheers!</h1>

            <!-- メイン画像エリア ※追加実装 -->
            <div class="relative bg-white">
