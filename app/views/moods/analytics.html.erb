<div class="min-h-screen bg-warning">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">

        <!-- ページタイトル -->
        <div class="text-center text-error mb-8 sm:mb-12">
        <h1 class="text-3xl sm:text-4xl font-bold mb-2">気分の分析</h1>
        <p class="text-error text-sm sm:text-base">あなたの気分の傾向を見てみましょう</p>
        </div>

        <!-- 統計カード -->
        <div class="card bg-base-100 shadow-xl mb-6 w-full">
            <div class="card-body p-4 sm:p-6">
                <h2 class="card-title text-lg sm:text-xl mb-4 justify-center">気分の記録</h2>

                <div class="grid grid-cols-3 gap-3 sm:gap-4">
                    <!-- 良い -->
                    <div class="flex flex-col items-center text-center">
                        <div class="text-3xl sm:text-4xl mb-2">😊</div>
                        <div class="text-xs sm:text-sm text-base-content/70 mb-1">良い</div>
                        <div class="text-2xl sm:text-3xl font-bold text-success"><%= @mood_counts["happy"] || 0 %></div>
                    </div>

                    <!-- 普通 -->
                    <div class="flex flex-col items-center text-center">
                        <div class="text-3xl sm:text-4xl mb-2">😐</div>
                        <div class="text-xs sm:text-sm text-base-content/70 mb-1">普通</div>
                        <div class="text-2xl sm:text-3xl font-bold text-base-content"><%= @mood_counts["neutral"] || 0 %></div>
                    </div>

                    <!-- 悪い -->
                    <div class="flex flex-col items-center text-center">
                        <div class="text-3xl sm:text-4xl mb-2">😢</div>
                        <div class="text-xs sm:text-sm text-base-content/70 mb-1">悪い</div>
                        <div class="text-2xl sm:text-3xl font-bold text-error"><%= @mood_counts["sad"] || 0 %></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- グラフエリア -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- 気分の分布（円グラフ） -->
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
            <h2 class="card-title text-lg sm:text-xl">気分の分布</h2>
            <%= pie_chart mood_data_for_pie(@mood_counts),
                colors: ["#10b981", "#6b7280", "#ef4444"],
                height: "300px",
                library: {
                    backgroundColor: 'transparent',
                    plugins: {
                    legend: {
                        labels: {
                        color: 'hsl(var(--bc))',
                        font: { family: 'Inter, system-ui, sans-serif' }
                        }
                    }
                    }
                } %>
            </div>
        </div>

        <!-- 直近30回分の気分推移 -->
        <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <p class="font-bold card-title">直近30回の気分推移</p>
            <p class="text-sm text-base-content/70 mb-4">
            記録回数: <%= @recent_moods.count %> / 30回
            </p>

          <div class="overflow-x-auto">
            <canvas id="mood-line-chart" width="800" height="400"></canvas>
          </div>

        <script>
          const labels = <%= raw @recent_moods.map { |m| "\"#{m.created_at.strftime('%m/%d')}\"" }.to_json %>;
          const values = <%= raw @recent_moods.map { |m| m.value }.to_json %>;
          if (window.drawMoodLineChart) {
            window.drawMoodLineChart(labels, values);
          }
        </script>
                </div>
              </div>
            </div>
          </div>

        <!-- 戻るボタン -->
        <div class="text-center mt-8 sm:mt-12 pb-6 sm:pb-8">
        <%= link_to "マイページに戻る", mypage_checkinout_records_path, class: "btn btn-secondary w-full sm:w-auto" %>
        </div>

    </div>
</div>
