<div class="hero min-h-screen bg-gradient-to-br from-green-400 via-emerald-500 to-teal-600">
    <div class="container mx-auto px-4 sm:px-6">

        <!-- ヘッダー -->
        <div class="text-center text-white mb-6 sm:mb-8 pt-8 sm:pt-12">
        <h1 class="text-3xl sm:text-4xl font-bold mb-4">マイページ</h1>
        </div>

        <!-- ナビゲーション -->
        <%= render 'navigation', today_record: @today_record %>

        <!-- 統計カード -->
        <%= render 'stats_cards',
                today_record: @today_record,
                weekly_stats: @weekly_stats,
                monthly_stats: @monthly_stats %>

        <!-- 勤怠記録一覧 -->
        <%= render 'records_list', recent_records: @recent_records %>

        <!-- ページネーション -->
        <div class="flex justify-center mt-4 sm:mt-6">
        <%= paginate @recent_records %>
        </div>

        <!-- フッター -->
        <div class="text-center mt-6 sm:mt-8 py-6 sm:py-8">
        <p class="text-white text-sm">💪 お疲れさまでした！えらい！</p>
        </div>
    </div>
</div>

<!-- JavaScript -->
<%= render 'elapsed_time_script', today_record: @today_record if @today_record %>
<%= render 'comment_toggle_script' %>