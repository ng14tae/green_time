<script>
    // デスクトップ版のコメント表示切り替え
    function showFullComment(button) {
    const shortText = button.parentElement;
    const fullComment = shortText.nextElementSibling;

    if (shortText && fullComment) {
        shortText.style.display = 'none';
        fullComment.classList.remove('hidden');
    }
    }

    // モバイル版のコメント表示切り替え
    function toggleComment(button) {
    const isExpanded = button.textContent === '閉じる';
    const card = button.closest('.border');

    if (card) {
        const shortDiv = card.querySelector('.mobile-comment-short');
        const fullDiv = card.querySelector('.mobile-comment-full');

        if (shortDiv && fullDiv) {
        if (isExpanded) {
            // 閉じる
            shortDiv.classList.remove('hidden');
            fullDiv.classList.add('hidden');
        } else {
            // 開く
            shortDiv.classList.add('hidden');
            fullDiv.classList.remove('hidden');
        }
        }
    }
    }
</script>