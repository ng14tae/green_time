<div class="border border-gray-200 rounded-lg p-4">
    <div class="flex justify-between items-start mb-3">
        <div>
        <div class="font-bold text-gray-800">
            <%= record.checkin_time.strftime("%Y/%m/%d") %>
            <span class="text-xs text-gray-500 ml-2">
            <%= record.checkin_time.strftime("(%a)") %>
            </span>
        </div>
        </div>
        <div>
        <% if record.checkout_time %>
            <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs">完了</span>
        <% else %>
            <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs">勤務中</span>
        <% end %>
        </div>
    </div>

    <div class="grid grid-cols-2 gap-3 text-sm">
        <div>
        <span class="text-gray-500">開始:</span>
        <span class="text-blue-600 font-medium ml-1">
            <%= record.checkin_time.strftime("%H:%M") %>
        </span>
        </div>
        <div>
        <span class="text-gray-500">終了:</span>
        <% if record.checkout_time %>
            <span class="text-orange-600 font-medium ml-1">
            <%= record.checkout_time.strftime("%H:%M") %>
            </span>
            <% if record.checkin_time.to_date != record.checkout_time.to_date %>
            <span class="text-purple-600 text-xs ml-1">翌日以降</span>
            <% end %>
        <% else %>
            <span class="text-red-500 font-bold ml-1">勤務中</span>
        <% end %>
        </div>
    </div>

    <div class="flex justify-between items-center mt-3 pt-3 border-t border-gray-100">
        <div class="flex items-center gap-2">
        <span class="text-gray-500 text-sm">気分:</span>
        <% if record.mood&.feeling.present? %>
            <span class="text-lg"><%= record.mood&.full_label || "" %></span>
        <% else %>
            <span class="text-gray-400 text-xs">未記録</span>
        <% end %>
        </div>
        <div class="text-right">
        <% if record.checkout_time %>
            <span class="text-green-600 font-bold text-sm">
            <%= sprintf("%.1f時間", (record.checkout_time - record.checkin_time) / 3600.0) %>
            </span>
        <% else %>
            <span class="text-orange-500 text-sm">-</span>
        <% end %>
        </div>
    </div>

    <!-- メモ -->
    <% if record.has_mood? && record.mood.comment.present? %>
        <div class="mt-3 pt-3 border-t border-gray-100">
        <span class="text-gray-500 text-sm">メモ:</span>
        <div class="mt-1">
            <% if record.mood.comment.length > 30 %>
            <p class="text-sm text-gray-700 mobile-comment-short">
                <%= truncate(record.mood.comment, length: 30) %>
                <button class="text-blue-500 text-xs ml-1" onclick="toggleComment(this)">もっと見る</button>
            </p>
            <div class="mobile-comment-full hidden">
                <p class="text-sm text-gray-700"><%= simple_format(record.mood.comment) %></p>
                <button class="text-blue-500 text-xs" onclick="toggleComment(this)">閉じる</button>
            </div>
            <% else %>
            <p class="text-sm text-gray-700"><%= record.mood.comment %></p>
            <% end %>
        </div>
        </div>
    <% end %>
</div>
